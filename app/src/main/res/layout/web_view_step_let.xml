<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/bottom_panel_receipt_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_dimen"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/bottom_panel_receipt_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        style="@style/Theme.Taxcom.TextMedium14SecondaryBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_dimen"
        android:gravity="center_horizontal"
        android:text="@string/cash_desk_bottom_panel_title"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_panel_receipt_icon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        style="@style/Theme.Taxcom.TextRegular14SecondaryForeground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ml_dimen"
        android:layout_marginTop="@dimen/xxs_dimen"
        android:layout_marginBottom="@dimen/xxs_dimen"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/xl_dimen"
        android:text="@string/cash_desk_bottom_panel_finish_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />
</androidx.constraintlayout.widget.ConstraintLayout>